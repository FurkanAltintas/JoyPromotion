@model ContactAddViewModel

<div class="container contact">
    <form asp-controller="Contact" asp-action="Index" method="post">
    <div class="container">

        <div class="form-group mb-3">
            <label asp-for="ContactAddDto.FullName"></label>
            <input asp-for="ContactAddDto.FullName" class="form-control" placeholder="Full Name" />
        </div>

        <div class="form-group mb-3">
            <label asp-for="ContactAddDto.Email"></label>
            <input asp-for="ContactAddDto.Email" class="form-control" placeholder="Email" />
        </div>

        <div class="form-group mb-3">
            <label asp-for="ContactAddDto.Subject">Subject</label>
            <input asp-for="ContactAddDto.Subject" class="form-control" placeholder="Subject" />
        </div>

        <div class="form-group mb-3">
            <label asp-for="ContactAddDto.Message"></label>
            <textarea asp-for="ContactAddDto.Message" class="form-control" rows="5" placeholder="Message"></textarea>
        </div>

        <div class="form-group captcha mb-3">
            <img id="img-captcha" src="~/get-captcha-image" />
            <input asp-for="ContactAddDto.CaptchaCode" class="form-control" placeholder="Captcha Code" />
            <span asp-validation-for="ContactAddDto.CaptchaCode" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <button type="submit" class="btn btn-dark">Submit</button>
        </div>

    </div>
</form>
</div>

@section scripts {
<script>
        $("#img-captcha").click(function () {
        resetCaptchaImage();
    });

    function resetCaptchaImage() {
        d = new Date();
        $("#img-captcha").attr("src", "/get-captcha-image?" + d.getTime());
    }
</script>
}

