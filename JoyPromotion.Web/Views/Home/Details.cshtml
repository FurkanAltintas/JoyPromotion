@model ContentViewModelUI 

<article class="top-one">
            <div class="container">
                <div class="top-details-img">
                    <a asp-controller="Home" asp-action="Details" asp-route-title="@Model.ContentDto.SlugTitle" asp-route-id="@Model.ContentDto.Id">
                    <img src="~/joy/img/background.jpg" class="img-fluid" alt="">
                    </a>
                </div>
                <div class="top-content-details">

                    <div class="top-content-details-category">
                        FASHION
                    </div>

                    <div class="top-content-details-title">
                        @Model.ContentDto.Title
                    </div>

                    <div class="top-content-details-description">
                        @Html.Raw(Model.ContentDto.Description)
                    </div>

                    <div class="top-content-social-media">
                        <div class="details-social">
                           @if (Model.GetUserSocialMediaDtos.Count != 0)
                    {
                        <text>Follow</text>
                             foreach (var socialMedia in Model.GetUserSocialMediaDtos)
                        {
                              <a href="@socialMedia.Url" target="_blank"><i class="fa @socialMedia.Icon"></i></a>
                        }
                    }
                        </div>
                    </div>

                </div>
            </div>
        </article>

        <hr>

        <article class="blog-lasts">
            <div class="container">
                <div class="row">
            @foreach (var content in Model.TakeTheLastThreeDtos)
            {
                                <div class="col-md-4">
                                    <div class="lasts-blog-img">
                                         <a asp-controller="Home" asp-action="Details" asp-route-title="@content.SlugTitle" asp-route-id="@content.Id">
                                        <img src="~/joy/img/taylor-joy8.jpg" class="img-fluid" alt="">
                                        </a>
                                    </div>
                                    <div class="lasts-blog-content">
                                        <div class="lasts-blog-content-category">
                            @content.CategoryName
                                        </div>
                                        <div class="lasts-blog-content-title">
                            @content.Title
                                        </div>
                                        <div class="lasts-blog-content-description">
                            @ContentExtensions.DescriptionSubstring(content.Description, 100)
                                        </div>
                                    </div>
                                </div>
            }
                </div>
            </div>
        </article>