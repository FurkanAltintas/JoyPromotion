@model UserAddViewModel

<form asp-action="Add" method="post">

    <div class="form-group mb-3">
        <label asp-for="UserAddDto.FirstName"></label>
        <input asp-for="UserAddDto.FirstName" class="form-control" />
        <span asp-validation-for="UserAddDto.FirstName"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="UserAddDto.SurName"></label>
        <input asp-for="UserAddDto.SurName" class="form-control" />
        <span asp-validation-for="UserAddDto.SurName"></span>
    </div>

    <div class="form-group mb-3">
        <label>Role Name</label>
        <select asp-for="UserAddDto.RoleId" asp-items="Model.Roles" class="form-control"></select>
        <span asp-validation-for="UserAddDto.RoleId"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="UserAddDto.Email"></label>
        <input asp-for="UserAddDto.Email" class="form-control" />
        <span asp-validation-for="UserAddDto.Email"></span>
    </div>


    <div class="form-group mb-3">
        <label asp-for="UserAddDto.Password"></label>
        <input asp-for="UserAddDto.Password" class="form-control" />
        <span asp-validation-for="UserAddDto.Password"></span>
    </div>

        <div class="form-group mb-3">
        <label asp-for="UserAddDto.PhoneNumber"></label>
        <input asp-for="UserAddDto.PhoneNumber" class="form-control" />
        <span asp-validation-for="UserAddDto.PhoneNumber"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="UserAddDto.Address"></label>
        <textarea asp-for="UserAddDto.Address" cols="7" rows="7" class="form-control"></textarea>
        <span asp-validation-for="UserAddDto.Address"></span>
    </div>

    <div class="form-group mb-3">
        <btn-button btn-type="submit" btn-class="btn-success" btn-value="Add User"></btn-button>
    </div>

</form>