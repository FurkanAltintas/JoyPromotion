@model UserListViewModel

@{
    int i = 0;
}

<table class="table table-hover table-striped" id="datatablesSimple">
    <thead>
        <tr>
            <th>#</th>
            <th>FullName</th>
            <th>Email</th>
            <th>Phone Number</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var userListDto in Model.UserListDtos)
        {
            i++;
            <tr>
                    <td>@i</td>
                    <td>@userListDto.FirstName @userListDto.SurName</td>
                    <td>@userListDto.Email</td>
                    <td>@userListDto.PhoneNumber</td>
                    <td>
                        <a asp-controller="User" asp-action="Edit" asp-route-id="@userListDto.Id" class="btn btn-outline-warning btn-sm">Edit</a>
                    </td>
                </tr>
        }
    </tbody>
    <tfoot>
            <th>#</th>
            <th>FullName</th>
            <th>Email</th>
            <th>Phone Number</th>
            <th></th>
    </tfoot>
</table>

<a asp-controller="User" asp-action="Add" class="btn btn-dark">User Add</a>