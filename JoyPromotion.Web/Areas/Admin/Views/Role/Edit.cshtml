@model RoleUpdateViewModel

<form asp-action="Edit" method="post">
    <input asp-for="RoleUpdateDto.Id" type="hidden" />

    <div class="form-group mb-3">
        <label asp-for="RoleUpdateDto.Name"></label>
        <input asp-for="RoleUpdateDto.Name" class="form-control" />
        <span asp-validation-for="RoleUpdateDto.Name"></span>
    </div>

    <div class="form-group mb-3">
        <btn-button btn-type="submit" btn-class="btn-success" btn-value="Edit Role"></btn-button>
    </div>
</form>