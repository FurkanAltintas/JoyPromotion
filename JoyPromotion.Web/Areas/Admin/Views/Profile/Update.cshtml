@model UserUpdateViewModel

<form asp-controller="Profile" asp-action="Update" method="post" enctype="multipart/form-data">
    <input asp-for="UserUpdateDto.Id" type="hidden" />

    <div class="form-group mb-3">
        <label asp-for="UserUpdateDto.FirstName"></label>
        <input asp-for="UserUpdateDto.FirstName" class="form-control" />
        <span asp-validation-for="UserUpdateDto.FirstName"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="UserUpdateDto.SurName"></label>
        <input asp-for="UserUpdateDto.SurName" class="form-control" />
        <span asp-validation-for="UserUpdateDto.SurName"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="UserUpdateDto.PhoneNumber"></label>
        <input asp-for="UserUpdateDto.PhoneNumber" class="form-control">
        <span asp-validation-for="UserUpdateDto.PhoneNumber"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="UserUpdateDto.Address"></label>
        <textarea asp-for="UserUpdateDto.Address" rows="5" class="form-control"></textarea>
        <span asp-validation-for="UserUpdateDto.Address"></span>
    </div>

    <div class="form-group mb-3">
        <img src="~/joy/img/taylor-joy.jpg" alt="UserUpdateDto.UserName" />
        <span asp-validation-for="UserUpdateDto.ImageUrl"></span>
    </div>

    <div class="form-group mb-3">
        <label>Select Image</label>
        <input asp-for="Image" type="file" class="form-control" />
    </div>

    <div class="form-group">
        <btn-button btn-type="submit" btn-class="btn-success" btn-value="Submit"></btn-button>
    </div>
</form>