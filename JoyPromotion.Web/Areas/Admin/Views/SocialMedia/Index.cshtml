@model SocialMediaListViewModel

@{
    int i = 0;
}

<table class="table table-hover table-striped" id="datatablesSimple">
    <thead>
        <tr>
            <th>#</th>
            <th>Name</th>
            <th>Icon</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var socialMedia in Model.SocialMediaListDto)
        {
            i++;
                    <tr>
                            <td>@i</td>
                            <td>@socialMedia.Name</td>
                            <td>@socialMedia.Icon</td>
                            <td>
                                <a asp-controller="SocialMedia" asp-action="Edit" asp-route-id="@socialMedia.Id" class="btn btn-outline-warning btn-sm">Edit</a>
                            </td>
                        </tr>
        }
    </tbody>
    <tfoot>
          <th>#</th>
            <th>Name</th>
            <th>Icon</th>
            <th></th>
    </tfoot>
</table>

<a asp-controller="SocialMedia" asp-action="Add" class="btn btn-dark">SocialMedia Add</a>