@model CategoryListViewModel

@{
    int i = 0;
}

<table class="table table-hover table-striped" id="datatablesSimple">
    <thead>
        <tr>
            <th>#</th>
            <th>Name</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model.CategoryListDtos)
        {
            i++;
            <tr>
                    <td>@i</td>
                    <td>@category.Name</td>
                    <td>
                        <a asp-controller="Category" asp-action="Edit" asp-route-id="@category.Id" class="btn btn-outline-warning btn-sm">Edit</a>
                    </td>
                </tr>
        }
    </tbody>
    <tfoot>
          <th>#</th>
            <th>Name</th>
            <th></th>
    </tfoot>
</table>

<a asp-controller="Category" asp-action="Add" class="btn btn-dark">Category Add</a>